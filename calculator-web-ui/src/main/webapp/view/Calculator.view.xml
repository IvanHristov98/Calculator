<mvc:View
		controllerName="com.calculator.webUi.controller.Calculator"
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:f="sap.f"
		xmlns:m="sap.m"
		xmlns:card="sap.f.cards"
		xmlns:core="sap.ui.core"
		displayBlock="true"
		height="100%">
	<Page title="{i18n>calculatorPageTitle}">
		<content>
		<m:FlexBox
        alignItems="Center"
        justifyContent="Center">
		<m:items>
			<f:Card
				width="auto"
				class="sapUiMediumPadding sapUiMediumMargin calculatorCard">
				<f:content>
				<VBox
					justifyContent="SpaceBetween">
					<HBox justifyContent="SpaceBetween">
						<Input 
							id="expressionBar"
							class="sapUiMediumMargin"
							value="{/recipient/name}"
							valueLiveUpdate="true"
							editable="false"
							width="355px"/>
					</HBox>
					<HBox justifyContent="SpaceBetween">
						<VBox
							width="420px"
							height="150px"
							justifyContent="SpaceBetween"
							displayInline="true">
							<HBox  justifyContent="SpaceBetween">
								<Button class="sapUiMediumMarginBegin" text="1" press=".onTokenPress('1')" type="Emphasized" />
								<Button text="2" press=".onTokenPress('2')" type="Emphasized" />
								<Button text="3" press=".onTokenPress('3')" type="Emphasized" />
								<Button text="4" press=".onTokenPress('4')" type="Emphasized" />
								<Button text="5" press=".onTokenPress('5')" type="Emphasized" />
								<Button text="C" press=".onBackspaceButtonPress()" type="Reject" />
								<Button class="sapUiMediumMarginEnd" text="(" press=".onTokenPress('(')" type="Emphasized" />
							</HBox>
							<HBox justifyContent="SpaceBetween">
								<Button class="sapUiMediumMarginBegin" text="6" press=".onTokenPress('6')" type="Emphasized" />
								<Button text="7" press=".onTokenPress('7')" type="Emphasized" />
								<Button text="8" press=".onTokenPress('8')" type="Emphasized" />
								<Button text="9" press=".onTokenPress('9')" type="Emphasized" />
								<Button text="0" press=".onTokenPress('0')" type="Emphasized" />
								<Button icon="sap-icon://delete" press=".onDeleteAllButtonPress()" type="Reject" />
								<Button class="sapUiMediumMarginEnd" text=")" press=".onTokenPress(')')" type="Emphasized" />
							</HBox>
							<HBox justifyContent="SpaceBetween">
								<Button class="sapUiMediumMarginBegin" text="+" press=".onTokenPress('+')" type="Emphasized" />
								<Button text="-" press=".onTokenPress('-')" type="Emphasized" />
								<Button text="*" press=".onTokenPress('*')" type="Emphasized" />
								<Button text="/" press=".onTokenPress('/')" type="Emphasized" />
								<Button text="^" press=".onTokenPress('^')" type="Emphasized" />
								<Button text="." press=".onTokenPress('.')" type="Default" />
								<Button class="sapUiMediumMarginEnd" icon="sap-icon://play" press="" type="Default" />
							</HBox>
						</VBox>
					</HBox>
					<HBox height="25px">
					</HBox>
				</VBox>	 
				</f:content>
			</f:Card>
			</m:items>
			</m:FlexBox>
		</content>
	</Page>
</mvc:View>